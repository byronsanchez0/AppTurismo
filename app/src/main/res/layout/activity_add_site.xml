<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/addfont">

    <EditText
        android:id="@+id/caja_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/caja_1"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:textColorHint="@color/addplace"
        android:backgroundTint="@color/addplace"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/caja_ubi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/caja_2"
        android:layout_margin="20dp"
        android:textColorHint="@color/addplace"
        android:backgroundTint="@color/addplace"
        android:textColor="@color/white"/>

    />

    <EditText
        android:id="@+id/caja_exp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/caja_3"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/addplace"
        android:backgroundTint="@color/addplace"
        android:textColor="@color/white"/>

    />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="5dp">

            <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <Button
        android:id="@+id/btn_gellery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="AÃ±adir foto"
        android:backgroundTint="@color/addplace"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/addplace"/>



</LinearLayout>